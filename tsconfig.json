{
  "compilerOptions": {
    "outDir": "./lib",
    "target": "es5",
    "module": "commonjs",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "jsx": "react",
    "baseUrl": "./src"
  },
  "exclude": [
    "node_modules",
    "lib",
    "*/*.scss"
  ]
}
